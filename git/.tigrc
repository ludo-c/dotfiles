set line-graphics = utf-8
# Copy ommit ID to clipboard (from http://jonas.nitro.dk/tig/manual.html)
bind generic 9 !@sh -c "echo -n %(commit) | xclip"

set blame-view	= id:yes,color file-name:auto author:email-user date:relative line-number:yes,interval=1 text
set grep-view	= file-name:no line-number:yes,interval=1 text
set main-view	= line-number:no,interval=5 id:no date:relative author:email-user commit-title:yes,graph,refs,overflow=no
#set reflog-view	= line-number:no,interval=5 id:yes date:no author:no commit-title:yes,refs,overflow=no
set refs-view	= line-number:no id:no date:default author:email-useR REF COMmit-title
set stash-view	= line-number:no,interval=5 id:no date:default author:email-user commit-title
set status-view	= line-number:no,interval=5 status:short file-name
set tree-view	= line-number:no,interval=5 mode author:email-user file-size date:relative id:no file-name
