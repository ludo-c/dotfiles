! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: rxvt

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

!URxvt.font: xft:monaco:size=10
!URxvt.font: xft:monospace:size=9
!URxvt*font: xft:Bitstream Vera Sans Mono:style=Regular:pixelsize=11:antialias=false
URxvt.font: xft:Bitstream Vera Sans Mono:size=9:antialias=false
!URxvt*font: xft:DejaVu Sans Mono:style=Regular:pixelsize=11:antialias=true
URxvt.letterSpace:-2
!URxvt.lineSpace:-1
!Xft.dpi: 96
Xft.antialias: false
!Xft.rgba: rgb
!Xft.hinting: true
!Xft.autohint: true
!Xft.hintstyle: hintslight

xvt.reverseVideo: True

URxvt.background : #000000
URxvt.foreground : #FFFFFF

URxvt.termName: rxvt-256color
URxvt*colorUL: #86a2b0

! black
URxvt.color0  : #2E3436
URxvt.color8  : #555753
! red
URxvt.color1  : #CC0000
URxvt.color9  : #EF2929
! green
URxvt.color2  : #4E9A06
URxvt.color10 : #8AE234
! yellow
URxvt.color3  : #C4A000
URxvt.color11 : #FCE94F
! blue
URxvt.color4  : #3465A4
URxvt.color12 : #729FCF
! magenta
URxvt.color5  : #75507B
URxvt.color13 : #AD7FA8
! cyan
URxvt.color6  : #06989A
URxvt.color14 : #34E2E2
! white
URxvt.color7  : #D3D7CF
URxvt.color15 : #EEEEEC

!URxvt.keysym.C-k:       echo -ne '\\033c'\n

! https://github.com/muennich/urxvt-perls
URxvt.perl-ext-common: default,perls/url-select,perls/keyboard-select,perls/clipboard,tabbedex
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.underline: true
URxvt.url-select.launcher: firefox
! clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! extension copy
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! tabbedex https://wiki.archlinux.org/index.php/Rxvt-unicode#Advanced_tab_management
URxvt.tabbed.autohide: true
!URxvt.tabbed.reopen-on-close: yes
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
URxvt.keysym.Control-Shift-Tab: perl:tabbedex:prev_tab
URxvt.keysym.Control-Shift-Left: perl:tabbedex:move_tab_left
URxvt.keysym.Control-Shift-Right: perl:tabbedex:move_tab_right


URxvt*saveLines: 20000
URxvt*scrollstyle:plain
URxvt*cursorBlink: true
URxvt*scrollBar_right: true
! in order to make "unclutter -keystroke" works
URxvt*pointerBlank: true
! disable ctrl + shift functionalities https://bbs.archlinux.org/viewtopic.php?id=111141
URxvt*iso14755: False
URxvt*iso14755_52: False
