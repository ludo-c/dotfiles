# To be copied into $HOME/.ssh/config

# OpenSSH 7.0 disables ssh-dss keys by default
# https://www.gentoo.org/support/news-items/2015-08-13-openssh-weak-keys.html
PubkeyAcceptedKeyTypes=+ssh-dss
PubkeyAcceptedKeyTypes=+ssh-rsa
PubkeyAcceptedAlgorithms=+ssh-dss
PubkeyAcceptedAlgorithms=+ssh-rsa
PubKeyAcceptedAlgorithms=+ssh-dss
PubKeyAcceptedAlgorithms=+ssh-rsa
HostkeyAlgorithms=+ssh-dss
HostkeyAlgorithms=+ssh-rsa

KexAlgorithms +diffie-hellman-group1-sha1
AddKeysToAgent yes

Host genbox_10
	Port=124

Host genbox_11
	Port=123

Host genbox_*
	Hostname=localhost
	ForwardAgent=yes
	#Compression=yes
	#KeepAlive=yes
	User=root
	ControlMaster auto
	ControlPath ~/.ssh/ssh-%r@%n:%p
	ControlPersist yes
	#ForwardX11 yes
	RequestTTY yes

host 172.*
	# avoid error: Unable to negotiate with IP port PORT: no matching key exchange method found.
	KexAlgorithms +diffie-hellman-group1-sha1

Host stb tch* sagem* humax* g11*
	#Hostname=172.16.4.28  # See /etc/hosts
	User=root
	ForwardAgent=yes
	# avoid error: Unable to negotiate with IP port PORT: no matching key exchange method found.
	KexAlgorithms +diffie-hellman-group1-sha1
	# Disable known_hosts check.
	UserKnownHostsFile /dev/null
	StrictHostKeyChecking no

Host android
	Hostname=localhost
	User=root
	Port=2222
	ForwardAgent=yes
	ControlMaster auto
	ControlPath ~/.ssh/ssh-%r@%n:%p
	ControlPersist yes
	ForwardX11 yes

Host ichigo
	Port=1025

Host nekojita kudasai wasabi ichigo
	#ProxyJump phone
	#ProxyCommand /bin/nc -x 127.0.0.1:1082 %h %p
	#ProxyCommand /bin/nc -x 127.0.0.1:1082 $(dig +short %h) %p
	#sshfs -o ProxyCommand "/bin/nc -x 127.0.0.1:1082 %h %p" ludo@wasabi:/home/ludo sshfs
	User=ludo
	ControlMaster auto
	ControlPath ~/.ssh/ssh-%r@%n:%p
	ControlPersist yes
	ForwardAgent=yes
	#DynamicForward 1081
	#ForwardX11 yes

host 192.168.2.*
	# avoid error: Unable to negotiate with IP port PORT: no matching key exchange method found.
	KexAlgorithms +diffie-hellman-group1-sha1

Host 192.168.1.104
	# Raspberry pi
	User=ludo
	ControlMaster auto
	ControlPath ~/.ssh/ssh-%r@%n:%p
	ControlPersist yes
	#ForwardX11 yes
	SetEnv TERM=xterm
	ForwardAgent=yes

